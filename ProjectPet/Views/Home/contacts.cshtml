@model ProjectPet.Models.Feedback

@{
    ViewBag.Title = "contacts";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Purple Pets | Contacts</title>
    <meta charset="utf-8">
    <link rel="icon" href="~/images/favicon.ico">
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="~/css/Homestyle.css">
    <link rel="stylesheet" href="~/css/form.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/forms.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>
        jQuery(document).ready(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });
        });
    </script>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->
</head>
<body>
    <header>
        <div class="container_12">
            <div class="grid_12">
                <h1><img src="~/images/logo.png" alt=""> </h1>
                <div class="menu_block">
                    <nav>
                        <ul class="sf-menu">
                            <li> @Html.ActionLink("Home", "Home")</li>
                            <li>
                                @Html.ActionLink("About", "about")
                               
                            </li>
                            <li> @Html.ActionLink("Services", "services")</li>
                            <li> @Html.ActionLink("Billing", "Employ")</li>
                            <li class="current"> @Html.ActionLink("Contact", "contacts") </li>
                        </ul>
                    </nav>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </header>
    <div class="content pt1">
        <div class="container_12">
            <div class="grid_6">
                <h2>Contact Info</h2>
                <br>
                <div class="map">
                    <figure class="img_inner">
                        <iframe class="gmap_iframe" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=600&amp;height=400&amp;hl=en&amp;q=chennai,avadi&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
                    </figure>
                    <address>
                        <p>
                            Purple Pet world,<br>
                            N0.13, Avadi Main Road<br>
                            Chennai-54,TamilNadu,INDIA.
                        </p>
                        <dl>
                            <dt>

                            </dt>
                            <dd><span>Mobile:</span>+91 9000000000</dd>
                            <dd><span>Telephone:</span>044 2345 6789</dd>
                            <dd><span>Mail:</span>purplepets@gmail.com</dd>
                        </dl>
                    </address>
                </div>
            </div>
            <div class="grid_5 prefix_1">
                <h2 class="ic1">Contact Form</h2>
                <form id="form" action="#" method="post">
                    <div class="success_wrapper">
                        <div class="success">
                            Contact form submitted!<br>
                            <strong>We will be in touch soon.</strong>
                        </div>
                    </div>
                    <fieldset>
                        <label class="name">
                            @Html.EditorFor(model => model.CustName, new { htmlAttributes = new { @class = "form-control text-capitalize", Placeholder = "Name" } })
                            @Html.ValidationMessageFor(Model => Model.CustName, "", new { @class = "text-danger" })

                            <br class="clear">
                            <span class="error error-empty">*This is not a valid name.</span><span class="empty error-empty">*This field is required.</span>
                        </label>
                        <label class="email">
                            @Html.EditorFor(model => model.CustMail, new { htmlAttributes = new { @class = "form-control text-capitalize", Placeholder = "Email" } })
                            @Html.ValidationMessageFor(Model => Model.CustMail, "", new { @class = "text-danger" })

                            <br class="clear">
                            <span class="error error-empty">*This is not a valid email address.</span><span class="empty error-empty">*This field is required.</span>
                        </label>
                        <label class="phone">
                            @Html.EditorFor(model => model.CustPhone, new { htmlAttributes = new { @class = "form-control text-capitalize", Placeholder = "Phone No" } })
                            @Html.ValidationMessageFor(Model => Model.CustPhone, "", new { @class = "text-danger" })

                            <br class="clear">
                            <span class="error error-empty">*This is not a valid phone number.</span><span class="empty error-empty">*This field is required.</span>
                        </label>
                        <label class="message">

                            @Html.EditorFor(model => model.Custfeedback, new { htmlAttributes = new { @class = "form-control text-capitalize", Placeholder = "Type Your Feedback" } })
                            @Html.ValidationMessageFor(Model => Model.Custfeedback, "", new { @class = "text-danger" })

                            <br class="clear">
                            <span class="empty">*This field is required.</span>
                        </label>
                        <div class="clear"></div>
                        <div class="btns">
                            <a data-type="reset" class="btn">Clear</a>  
                            <br />
                            <input type="submit"  style="background-color:orange" value="Send" class="btn btn-default" />

                            <div class="clear"></div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials"> <a href="#"></a> <a href="#"></a> <a href="#"></a> <a href="#"></a> </div>
                <p>Purple Pets &copy; 2021 | <a href="#">Privacy Policy</a> </p>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>